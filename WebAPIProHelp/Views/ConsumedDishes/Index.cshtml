@model IEnumerable<WebAPIProHelp.Models.ConsumedDish>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProteinsPer100g)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarbsPer100g)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FatsPer100g)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaloriesPer100g)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProteinsPer100g)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarbsPer100g)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatsPer100g)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaloriesPer100g)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.RecipeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DishId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DishId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DishId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
